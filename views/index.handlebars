<h1>Burgers!</h1>

<h2>Available Burgers</h2>

<ul>
    {{#each burgers}}
    {{#unless this.devoured}}
    {{this.burger_name}}
    {{/unless}}

    {{/each}}
</ul>

<h2>Devoured Burgers</h2>

<ul>
    {{#each burgers}}
    {{#if this.devoured}}
    {{this.burger_name}}
    {{/if}}

    {{/each}}
</ul>

<div id="create-burger">
    <form action="/" method="POST">
        <input id="burger-name" type="text" name="burger_name" placeholder="burger?">
        <button id="submit-btn" type="submit">Add!</button>
    </form>
</div>